#!/bin/bash

index=1

while [ $index -lt 10]
do
  if ["ping -c 0 rpi0index"]
  then
    echo "alive"
   else
    echo "dead"
  fi
index = $(($index + 1))
done

while [ $index -ge 10]
do
  if [0 -eq rpiindex]
  then
    echo "alive"
   else
    echo "dead"
  fi
index = $(($index + 1))
done
